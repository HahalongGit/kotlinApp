<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:text="主页面的Fragment"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_testActivty"
        android:text="测试自定义权限"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_moduleLogin"
        android:text="进入登录模块登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_moduleShare"
        android:text="进入share模块"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_moduleWallet"
        android:text="进如钱包模块"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.digua.kotlinapp.view.CustomeLayout
        android:layout_width="match_parent"
        android:background="#BDF7EA"
        android:visibility="visible"
        android:layout_height="200dp">

        <Button
            android:id="@+id/btn_test"
            android:text="测试点击"
            android:layout_width="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="30dp"/>

        <TextView
            android:text="一个TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.digua.kotlinapp.view.CustomeLayout>

</LinearLayout>
